; =========================================================================
; FasterBASIC Tree-sitter Bracket Queries for Zed
; Defines matching bracket pairs for bracket highlighting and navigation
; =========================================================================

; -------------------------------------------------------------------------
; Punctuation brackets
; -------------------------------------------------------------------------
("(" @open ")" @close)
("[" @open "]" @close)

; -------------------------------------------------------------------------
; IF ... END IF / ENDIF
; -------------------------------------------------------------------------
(if_statement "IF" @open "ENDIF" @close)
(if_statement "IF" @open "END" @close)

; -------------------------------------------------------------------------
; SELECT CASE ... END CASE / ENDCASE
; -------------------------------------------------------------------------
(select_case_statement "SELECT" @open "ENDCASE" @close)
(select_case_statement "SELECT" @open "END" @close)

; -------------------------------------------------------------------------
; FOR ... NEXT
; -------------------------------------------------------------------------
(for_statement "FOR" @open "NEXT" @close)
(for_each_statement "FOR" @open "NEXT" @close)

; -------------------------------------------------------------------------
; WHILE ... WEND / ENDWHILE
; -------------------------------------------------------------------------
(while_statement "WHILE" @open "WEND" @close)
(while_statement "WHILE" @open "ENDWHILE" @close)

; -------------------------------------------------------------------------
; REPEAT ... UNTIL
; -------------------------------------------------------------------------
(repeat_statement "REPEAT" @open "UNTIL" @close)

; -------------------------------------------------------------------------
; DO ... LOOP
; -------------------------------------------------------------------------
(do_statement "DO" @open "LOOP" @close)

; -------------------------------------------------------------------------
; SUB ... END SUB / ENDSUB
; -------------------------------------------------------------------------
(sub_declaration "SUB" @open "ENDSUB" @close)
(sub_declaration "SUB" @open "END" @close)

; -------------------------------------------------------------------------
; FUNCTION ... END FUNCTION / ENDFUNCTION
; -------------------------------------------------------------------------
(function_declaration "FUNCTION" @open "ENDFUNCTION" @close)
(function_declaration "FUNCTION" @open "END" @close)

; -------------------------------------------------------------------------
; CLASS ... END CLASS
; -------------------------------------------------------------------------
(class_declaration "CLASS" @open "END" @close)

; -------------------------------------------------------------------------
; CONSTRUCTOR ... END CONSTRUCTOR
; -------------------------------------------------------------------------
(constructor_declaration "CONSTRUCTOR" @open "END" @close)

; -------------------------------------------------------------------------
; DESTRUCTOR ... END DESTRUCTOR
; -------------------------------------------------------------------------
(destructor_declaration "DESTRUCTOR" @open "END" @close)

; -------------------------------------------------------------------------
; METHOD ... END METHOD
; -------------------------------------------------------------------------
(method_declaration "METHOD" @open "END" @close)

; -------------------------------------------------------------------------
; TYPE ... END TYPE / ENDTYPE
; -------------------------------------------------------------------------
(type_declaration "TYPE" @open "ENDTYPE" @close)
(type_declaration "TYPE" @open "END" @close)

; -------------------------------------------------------------------------
; MATCH TYPE ... END MATCH / ENDMATCH
; -------------------------------------------------------------------------
(match_type_statement "MATCH" @open "ENDMATCH" @close)
(match_type_statement "MATCH" @open "END" @close)

; -------------------------------------------------------------------------
; TRY ... END TRY
; -------------------------------------------------------------------------
(try_statement "TRY" @open "END" @close)

; -------------------------------------------------------------------------
; Timer inline DO ... DONE
; -------------------------------------------------------------------------
(timer_statement "DO" @open "DONE" @close)
